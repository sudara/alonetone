<h1>New update</h1>

<%= error_messages_for :update %>

<%= form_for @update do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Content</b><br />
    <%= f.text_area :content, :rows => 25, :cols => 70 %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', blog_home_path %>
