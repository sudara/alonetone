<div id="comment_<%= object.unique_id %>" class="comment_asset">
  <div class="comment_form">
    <%= form_for @comment, id: "comment_form_#{object.unique_id}" do |f| %>
     <div class="comment_as">
     <% if logged_in? %>
        <%= image_tag current_user.avatar(:tiny) %>Say something, <%= current_user.name %>:
     <% else %>
        <%= image_tag 'icons/user.png' %> Say something as a guest or <%= link_to 'login', login_path %>:
     <% end %>
     </div>
     <%= f.text_area :body, rows: 4, cols: 40, class: 'double_trouble', id: "comment_body_#{object.unique_id}"  %>
     <%= f.hidden_field :commentable_type, value: 'feature', id: "comment_commentable_type_#{object.unique_id}"%>
     <%= f.hidden_field :commentable_id, value: @feature.id, id: "comment_commentable_id_#{object.unique_id}"%>

     <div class="submit_wrapper">
        <div class="comment_waiting" >
          <div class="text"><!-- placeholder response text --></div>
        </div>
        <div class="small_spinner" style="display:none;"></div>
        <%= f.submit "make your comment", class: 'comment_submit', id: "submit_#{object.unique_id}"%>
      </div>
    <% end %>
  </div>
</div>
