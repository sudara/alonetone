<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="abuseipdb-verification" content="3yplyU5E" />
  <title><%= @page_title ?  "#{@page_title} | alonetone " : 'alonetone' %></title>
  <%= yield :head %>
  <%= stylesheet_link_tag 'application', disabled: dark_theme? %>
  <%= stylesheet_link_tag 'dark_theme', disabled: light_theme? %>
  <%= javascript_pack_tag "application", 'data-turbolinks-track': 'reload', defer: true  %>

  <meta content="index,follow" name="robots"/>
  <% if @asset&.persisted? or @playlist&.persisted? %>
    <meta property="og:type"        content="music.<%= @playlist ? 'album' : 'song' %>" />
    <meta property="og:title"       content="<%= @playlist.try(:title) || @asset.title %>" />
    <meta property="og:description" content="A<%= @playlist ? 'n album' : ' song'  %> by <%= @user.name %>" />
    <% if @playlist %>
    <meta property="og:image"       content="<%= playlist_cover_url(@playlist, variant: :playlist_cover) %>" />
    <% else %>
    <meta property="og:image"       content="<%= user_avatar_url(@user, variant: :large_avatar) %>" />
    <% end %>
  <% end %>

  <%= csrf_meta_tag %>
  <%= render partial: 'shared/headway' if logged_in? %>
  <!-- render user specific variables and js helpers -->
  <%= render partial: 'shared/javascript_payload' %>
  <%= render partial: 'shared/analytics' %>
</head>

<body class="<%= yield :body_class %>">

  <% if @sudo %>
  <div class="sudo_bar">
    Sudo'd as <%= current_user.name %>. <%= link_to 'Return to admin.', sudo_user_path(@sudo) %></span>
  </div>
  <% end %>

  <%= check_for_and_display_welcome_back %>
  <%= check_for_and_display_flashes %>

  <header id="site_header">
    <%= render partial: 'shared/header' %>
  </header>

  <main>
    <%= content_for?(:static) ? yield(:static) : yield %>
    <div id="columns">
      <div id="left">
        <%= yield :left %>
      </div>

      <div id="right">
        <%= yield :right %>
      </div>
      <%= yield :bottom %>
    </div>
  </main>

  <footer id="site_footer" data-turbolinks-permanent>
    <%= cache("footer2/#{logged_in?}/#{moderator?}", expires_in: 1.minute) do %>
      <%= render partial: 'shared/footer' %>
    <% end %>
  </footer>

  <div id='play-svg-container' style='display:none' data-turbolinks-permanent>
    <%== render file: svg_path('svg/animation_play.svg') %>
  </div>

  <div class="floating_feedback ajax_waiting" data-controller="flash">
    <div class="ajax_success"><span>Saved!</span></div>
  </div>
</body>
</html>
