<% if white_theme_enabled? %>
<h2>Latest Comments</h2>
<div id="user_comments" class="box">
  
  <%= render partial: 'shared/comment', collection: @comments %>
</div>
<div class="below_box">
	<%= link_to user_comments_path(@user.login), class: 'view_all' do %>
    <span>view all &nbsp;
      <i class="icon_caret">
        <%= render file: svg_path('svg/icon_caret.svg') %>
      </i>
    </span>
	<% end if @comments.size > 4 %>
</div>

<% else %>
<div id="user_comments" class="box">
  <h2 class="box">Latest Comments</h2>
  <%= render partial: 'shared/comment', collection: @comments %>
</div>
<div class="footer_box">
	<%= link_to user_comments_path(@user.login), class: 'view_all' do %>
    <span>view all </span><span class="sprites-horizontal-arrow sprites-after-heading"></span>
	<% end if @comments.size > 4 %>
</div>
<% end %>